{
  "name": "cuneiform",
  "displayName": "Cuneiform Language Support",
  "description": "Syntax highlighting and theming for Cuneiform story files",
  "version": "1.0.0",
  "publisher": "cuneiform-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "cuneiform",
    "story",
    "screenplay",
    "narrative"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidlantrip/cuneiform-grammar"
  },
  "contributes": {
    "languages": [
      {
        "id": "cuneiform",
        "aliases": [
          "Cuneiform",
          "cuneiform"
        ],
        "extensions": [
          ".cune"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cuneiform",
        "scopeName": "source.cuneiform",
        "path": "./syntaxes/cuneiform.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Cuneiform Screenplay",
        "uiTheme": "vs",
        "path": "./themes/cuneiform-screenplay.json"
      },
      {
        "label": "Cuneiform Novel",
        "uiTheme": "vs",
        "path": "./themes/cuneiform-novel.json"
      },
      {
        "label": "Cuneiform Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/cuneiform-dark.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:cuneiform"
  ],
  "scripts": {
    "compile": "tsc -p ./ --listEmittedFiles false",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/emscripten": "^1.41.2",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.0"
  },
  "dependencies": {
    "web-tree-sitter": "^0.25.9"
  }
}
