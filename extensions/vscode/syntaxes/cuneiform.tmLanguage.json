{
  "scopeName": "source.cuneiform",
  "name": "Cuneiform",
  "fileTypes": ["cune"],
  "patterns": [
    {
      "name": "comment.line.hash.cuneiform",
      "match": "#.*$"
    },
    {
      "name": "markup.heading.1.cuneiform",
      "match": "^=\\s+.*$"
    },
    {
      "name": "markup.heading.2.cuneiform",
      "match": "^==\\s+.*$"
    },
    {
      "name": "markup.heading.3.cuneiform",
      "match": "^===\\s+.*$"
    },
    {
      "name": "keyword.control.cuneiform",
      "match": "^(///|//|/)\\s+"
    },
    {
      "name": "keyword.directive.cuneiform",
      "match": "^(TITLE|WORLD|FORMAT):"
    },
    {
      "name": "keyword.import.cuneiform",
      "match": "@import\\b"
    },
    {
      "name": "keyword.adapter.cuneiform",
      "match": "@adapter\\b"
    },
    {
      "name": "entity.name.tag.cuneiform",
      "match": "@\\w+"
    },
    {
      "name": "meta.entity.line.cuneiform",
      "match": "^\\s*-\\s+([A-Za-z][A-Za-z0-9 ]*)(:)\\s*(.*)$",
      "captures": {
        "1": {
          "name": "entity.name.function.cuneiform"
        },
        "2": {
          "name": "punctuation.separator.cuneiform"
        },
        "3": {
          "name": "string.unquoted.description.cuneiform"
        }
      }
    },
    {
      "name": "variable.other.property.cuneiform",
      "match": "^\\+\\w+:"
    },
    {
      "name": "entity.name.reference.cuneiform",
      "match": "\\{[^{}\n]+\\}"
    },
    {
      "name": "string.quoted.double.cuneiform",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.cuneiform",
          "match": "\\\\."
        }
      ]
    }
  ]
}
