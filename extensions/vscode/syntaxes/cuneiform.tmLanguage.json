{
  "scopeName": "source.cuneiform",
  "name": "Cuneiform",
  "fileTypes": ["cune"],
  "patterns": [
    {
      "name": "comment.line.hash.cuneiform",
      "match": "#.*$"
    },
    {
      "name": "markup.heading.1.cuneiform",
      "match": "^=\\s+.*$"
    },
    {
      "name": "markup.heading.2.cuneiform",
      "match": "^==\\s+.*$"
    },
    {
      "name": "markup.heading.3.cuneiform",
      "match": "^===\\s+.*$"
    },
    {
      "name": "keyword.control.cuneiform",
      "match": "^(///|//|/)\\s+"
    },
    {
      "name": "keyword.directive.cuneiform",
      "match": "^(TITLE|WORLD|FORMAT):"
    },
    {
      "name": "keyword.import.cuneiform",
      "match": "@import\\b"
    },
    {
      "name": "keyword.adapter.cuneiform",
      "match": "@adapters?\\b"
    },
    {
      "name": "meta.entity.block.cuneiform",
      "begin": "^\\s*@(characters?|locations?|items?|entities|themes|custom_metadata|notes|metadata|display|requirements|world_eras|entity_eras|character_eras|location_eras|eras)\\s*\\{",
      "beginCaptures": {
        "0": { "name": "keyword.entity.block.cuneiform" },
        "1": { "name": "entity.name.type.cuneiform" }
      },
      "end": "^\\s*\\}",
      "endCaptures": { "0": { "name": "punctuation.bracket.curly.cuneiform" } },
      "patterns": [
        {
          "name": "meta.entity.item.cuneiform",
          "begin": "^\\s*-\\s+([A-Za-z_][A-Za-z0-9_ ]*)\\s*:\\s*\\{",
          "beginCaptures": {
            "1": { "name": "entity.name.function.cuneiform" }
          },
          "end": "^\\s*\\}",
          "endCaptures": {
            "0": { "name": "punctuation.bracket.curly.cuneiform" }
          },
          "patterns": [{ "include": "#entityObjectBody" }]
        },
        {
          "name": "meta.entity.item.line.cuneiform",
          "match": "^\\s*-\\s+([A-Za-z_][A-Za-z0-9_ ]*)\\s*:(.*)$",
          "captures": {
            "1": { "name": "entity.name.function.cuneiform" },
            "2": { "name": "string.unquoted.description.cuneiform" }
          }
        }
      ]
    },
    {
      "name": "entity.name.tag.cuneiform",
      "match": "@\\w+"
    },
    {
      "name": "meta.entity.line.cuneiform",
      "match": "^\\s*-\\s+([A-Za-z][A-Za-z0-9 ]*)(: )?(.+)?$",
      "captures": {
        "1": { "name": "entity.name.function.cuneiform" },
        "2": { "name": "punctuation.separator.key-value.cuneiform" },
        "3": { "name": "string.unquoted.description.cuneiform" }
      }
    },
    {
      "name": "variable.other.property.cuneiform",
      "match": "^\\+\\w+:"
    },
    {
      "name": "entity.name.reference.cuneiform",
      "match": "\\{[^{}\n]+\\}"
    },
    {
      "name": "string.quoted.double.cuneiform",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "name": "constant.character.escape.cuneiform", "match": "\\\\." }
      ]
    },
    {
      "name": "meta.adapter.external.cuneiform",
      "begin": "^\\s*@adapter\\s+(\"[^\"]*\"|'[^']*')\\s*(:)\\s*",
      "beginCaptures": {
        "1": { "name": "string.quoted.adapter.path.cuneiform" },
        "2": { "name": "punctuation.separator.key-value.cuneiform" }
      },
      "end": "$",
      "patterns": [
        { "name": "punctuation.bracket.curly.cuneiform", "match": "[{}]" },
        {
          "name": "string.unquoted.adapter.value.cuneiform",
          "match": "[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    {
      "name": "meta.adapter.inline.cuneiform",
      "begin": "^\\s*@adapter\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*\\{",
      "beginCaptures": {
        "1": { "name": "entity.name.function.adapter.cuneiform" }
      },
      "end": "^\\s*\\}",
      "endCaptures": { "0": { "name": "punctuation.bracket.curly.cuneiform" } },
      "patterns": [{ "include": "#adapterObjectBody" }]
    },
    {
      "name": "meta.adapters.block.cuneiform",
      "begin": "^\\s*@adapters\\s*\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.bracket.curly.cuneiform" }
      },
      "end": "^\\s*\\}",
      "endCaptures": { "0": { "name": "punctuation.bracket.curly.cuneiform" } },
      "patterns": [
        {
          "name": "meta.adapters.item.cuneiform",
          "begin": "^\\s*-\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*\\{",
          "beginCaptures": {
            "1": { "name": "entity.name.function.adapter.cuneiform" }
          },
          "end": "^\\s*\\}",
          "endCaptures": {
            "0": { "name": "punctuation.bracket.curly.cuneiform" }
          },
          "patterns": [{ "include": "#adapterObjectBody" }]
        },
        {
          "name": "meta.adapters.item.line.cuneiform",
          "match": "^\\s*-\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:(.*)$",
          "captures": {
            "1": { "name": "entity.name.function.adapter.cuneiform" },
            "0": { "name": "meta.line.adapter.cuneiform" }
          }
        }
      ]
    }
  ],
  "repository": {
    "adapterObjectBody": {
      "patterns": [
        {
          "name": "variable.other.property.adapter.cuneiform",
          "match": "^\\s+([a-z_][a-z0-9_]*)\\s*:(?=\\s|$)",
          "captures": {
            "1": { "name": "variable.other.property.adapter.cuneiform" }
          }
        },
        {
          "name": "meta.adapter.prop.list-item.cuneiform",
          "match": "^\\s*-\\s+([a-z_][a-z0-9_]*)\\s*:(.*)$",
          "captures": {
            "1": { "name": "variable.other.property.adapter.cuneiform" },
            "0": { "name": "meta.line.adapter.list-item.cuneiform" }
          }
        },
        {
          "name": "meta.adapter.prop.scalar-block.cuneiform",
          "begin": "^\\s+([a-z_][a-z0-9_]*)\\s*:\\s*\\|\\s*$",
          "beginCaptures": {
            "1": { "name": "variable.other.property.adapter.cuneiform" }
          },
          "end": "^(?=\\s*[a-z_]|\\s*\\}|\\s*-)",
          "patterns": [
            { "name": "string.quoted.block.cuneiform", "match": "^\\s+.+$" }
          ]
        },
        { "name": "punctuation.separator.key-value.cuneiform", "match": ":" },
        { "name": "punctuation.bracket.curly.cuneiform", "match": "[{}]" },
        { "name": "punctuation.definition.list.cuneiform", "match": "^-" },
        {
          "name": "string.quoted.double.cuneiform",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.cuneiform", "match": "\\\\." }
          ]
        },
        {
          "name": "constant.language.boolean.cuneiform",
          "match": "\\b(true|false)\\b"
        },
        { "name": "constant.numeric.integer.cuneiform", "match": "\\b\\d+\\b" },
        {
          "name": "string.unquoted.adapter.value.cuneiform",
          "match": "(?<=:)\\s*[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    "entityObjectBody": {
      "patterns": [
        {
          "name": "variable.other.property.cuneiform",
          "match": "^\\s+([a-z_][a-z0-9_]*)\\s*:(?=\\s|$)",
          "captures": {
            "1": { "name": "variable.other.property.cuneiform" }
          }
        },
        {
          "name": "meta.entity.prop.scalar-block.cuneiform",
          "begin": "^\\s+([a-z_][a-z0-9_]*)\\s*:\\s*\\|\\s*$",
          "beginCaptures": {
            "1": { "name": "variable.other.property.cuneiform" }
          },
          "end": "^(?=\\s*[a-z_]|\\s*\\}|\\s*-)",
          "patterns": [
            { "name": "string.quoted.block.cuneiform", "match": "^\\s+.+$" }
          ]
        },
        { "name": "punctuation.separator.key-value.cuneiform", "match": ":" },
        { "name": "punctuation.bracket.curly.cuneiform", "match": "[{}]" },
        {
          "name": "string.quoted.double.cuneiform",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.cuneiform", "match": "\\\\." }
          ]
        },
        {
          "name": "string.unquoted.entity.value.cuneiform",
          "match": "(?<=:)\\s*[^\\r\\n]+"
        }
      ]
    }
  }
}
